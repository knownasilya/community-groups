<ResourceHeader @name={{this.group.name}}>
  <LinkTo @params={{array 'manage.group.edit' this.group.id}} class='p-2'>
    Edit Group
  </LinkTo>
</ResourceHeader>

<div class='flex md:flex-row flex-col p-4'>
  <section class='p-4 rouded md:w-1/3 w-full'>
    <header class='text-lg'>
      Details
    </header>

    <div class='mt-4'>
      Leader: {{this.group.leader.name}}
    </div>
  </section>

  <section class='p-4 rounded md:ml-4 md:mt-0 mt-4 w-full'>
    <header class='text-lg'>
      Members
    </header>

    <div class='mt-4'>
      <ul class='list-reset card-grid'>
        {{#each this.group.members as |member|}}
          <li class='rounded-full bg-white p-4'>
            {{member.name}}
          </li>
        {{else}}
          No members.
        {{/each}}
      </ul>
    </div>
  </section>
</div>